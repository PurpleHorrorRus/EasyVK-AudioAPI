{
    "env": {
        "browser": true,
        "node": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4, {
            "SwitchCase": 1
        }],
        "no-extra-semi": "off",
        "no-trailing-spaces": "error",
        "global-require": "off",
        "switch-colon-spacing": ["error", {
            "after": true
        }],
        "semi": ["error", "always"]
    }
}
